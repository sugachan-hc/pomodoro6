body {
  font-size: 14px;
  <%# color: #575f74; %>
  color: white;
}

.bg-image {
  // 追加
  <%# asset_path('pic1.jpg') %>
  <%# background-image: url(""); %>
  background-size: cover;
}

a {
  color: #1355b4;
  text-decoration: none;
}

.header {
  align-items: center;
  background-color: #fff;
  box-shadow: 0 0 15px #e2e6ef;
  display: flex;
  justify-content: space-between;
  padding: 16px 40px;
}

.header-title {
  font-size: 28px;
}

.header-title a {
  color: #348560;
}

.header-nav {
  display: flex;
}

.main-content {
  margin-top: 40px;
}

.content-wrapper {
  margin: 0 auto;
  max-width: 800px;
}

.content-wrapper h2 {
  text-align: center;
}

.footer {
  background-color: #fff;
  border-top: 1px solid #ddd;
  margin-top: 70px;
  padding: 6px;
  width: 100%;
}

.footer-text {
  color: #595c5f;
  font-size: 12px;
  margin: 0;
  text-align: center;
}

.flash-box {
  position: relative;
  width: 100%;
}

.notice {
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid transparent;
  border-radius: 4px;
  color: #3c763d;
  background-color: #dff0d8;
  border-color: #d6e9c6;
  position: absolute;
  top: 5%;
  left: 50%;
  transform: translate(-50%, 0);
  z-index: 999;
}

.alert {
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid transparent;
  border-radius: 4px;
  color: #a94442;
  background-color: #f2dede;
  border-color: #ebccd1;
}

.errors {
  padding: 15px;
  margin-bottom: 20px;
  border: 1px solid transparent;
  border-radius: 4px;
  color: #a94442;
  background-color: #f2dede;
  border-color: #ebccd1;
}

.errors h3 {
  margin-top: 0;
  color: inherit;
}

.errors ul {
  margin: 0;
  padding: 0;
  list-style-type: none;
}

.errors li {
  margin-bottom: 10px;
}

<%# .form {
  margin: 40px 0 25px;
} %>

.form-group {
  margin-bottom: 20px;
}

.form-input,
.form-textarea {
  width: 100%;
  height: 42px;
  border: 1px solid #ddd;
  border-radius: 2px;
  padding: 10px 16px;
  margin: 8px 0;
}

.form-input:focus-visible,
.form-textarea:focus-visible {
  outline: -webkit-focus-ring-color auto 1px;
}

.form-textarea {
  height: 240px;
}

.form-submit {
  text-align: center;
  padding-top: 15px;
  font-weight: 700;
  <%# margin-bottom: 40px; %>
}

.form-button {
  border-radius: 4px;
  padding: 10px 30px;
  text-align: center;
}

